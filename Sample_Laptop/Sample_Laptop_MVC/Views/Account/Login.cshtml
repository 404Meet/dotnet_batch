@model Account
@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2 ">
            <h4 class="text-primary font-monospace">Login</h4>
        </div>
        <div class="col">
            <label asp-for="UserName"> UserName </label>
            <input asp-for="UserName" class="form-control card border-secondary mb-1" placeholder="UserName" />
            <label asp-for="Password"> Password </label>
            <input asp-for="Password" class="form-control card border-secondary mb-1" placeholder="Password" />
         </div>
        <div class="mb-3">
            <br />
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
        <a href="#">Forgo t Password ? &nbsp;</a> &nbsp;&nbsp;
        <a asp-area="" asp-controller="Account" asp-action="SignUp">&nbsp; Sign Up </a>
    </div>
</form>


